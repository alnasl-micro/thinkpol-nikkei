{
  "manifest_version": 3,
  "name": "Thinkpol for Nikkei",
  "version": "1.0.0",
  "description": "Hide \"Think!\" comments on Nikkei",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/minitrue.js"],
      "matches": [
        "https://www.nikkei.com/article/*"
      ]
    }
  ]
}
